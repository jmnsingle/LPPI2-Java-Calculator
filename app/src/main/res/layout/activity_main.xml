<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="right|center"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="40pt"
        android:text="0" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnClearMemory"
                android:onClick="clearMemory"
                android:text="MC"
                android:textColor="#FFF"
                android:textSize="14pt"
                android:layout_margin="1pt"
                android:layout_height="25pt"
                android:layout_width="25pt"
                android:layout_weight="1"
                android:background="@color/design_default_color_primary_dark">

            </Button>

            <Button
                android:id="@+id/btnResultMemory"
                android:text="MR"
                android:onClick="getResultFromMemory"
                android:textColor="#FFF"
                android:textSize="14pt"
                android:layout_margin="1pt"
                android:layout_height="25pt"
                android:layout_width="25pt"
                android:layout_weight="1"
                android:background="@color/design_default_color_primary_dark">

            </Button>

            <Button
                android:id="@+id/btnSubtractNumberFromMemory"
                android:text="M-"
                android:onClick="setSubtractNumberFromMemory"
                android:textColor="#FFF"
                android:textSize="14pt"
                android:layout_margin="1pt"
                android:layout_height="25pt"
                android:layout_width="25pt"
                android:layout_weight="1"
                android:background="@color/design_default_color_primary_dark">

            </Button>


            <Button
                android:id="@+id/btnSumNumberFromMemory"
                android:text="M+"
                android:onClick="setSumNumberFromMemory"
                android:textColor="#FFF"
                android:textSize="14pt"
                android:layout_margin="1pt"
                android:layout_height="25pt"
                android:layout_width="25pt"
                android:layout_weight="1"
                android:background="#000">

            </Button>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnClear"
                android:onClick="clearDisplay"
                android:text="AC"
                android:textColor="#FFF"
                android:textSize="14pt"
                android:layout_margin="1pt"
                android:layout_height="25pt"
                android:layout_width="25pt"
                android:layout_weight="1"
                android:background="@color/design_default_color_primary_dark">

            </Button>

            <Button
                android:id="@+id/btnPlusMinus"
                android:text="+/-"
                android:onClick="setNumberEvent"
                android:textColor="#FFF"
                android:textSize="14pt"
                android:layout_margin="1pt"
                android:layout_height="25pt"
                android:layout_width="25pt"
                android:layout_weight="1"
                android:background="@color/design_default_color_primary_dark">

            </Button>

            <Button
                android:id="@+id/btnPercent"
                android:text="%"
                android:onClick="setPercentResult"
                android:textColor="#FFF"
                android:textSize="14pt"
                android:layout_margin="1pt"
                android:layout_height="25pt"
                android:layout_width="25pt"
                android:layout_weight="1"
                android:background="@color/design_default_color_primary_dark">

            </Button>


            <Button
                android:id="@+id/btnMultiply"
                android:text="*"
                android:onClick="setOperatorEvent"
                android:textColor="#FFF"
                android:textSize="14pt"
                android:layout_margin="1pt"
                android:layout_height="25pt"
                android:layout_width="25pt"
                android:layout_weight="1"
                android:background="#000">

            </Button>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnSeven"
                android:onClick="setNumberEvent"
                android:text="7"
                android:textColor="#FFF"
                android:textSize="14pt"
                android:layout_margin="1pt"
                android:layout_height="25pt"
                android:layout_width="25pt"
                android:layout_weight="1"
                android:background="@color/design_default_color_primary_dark">

            </Button>

            <Button
                android:id="@+id/btnEight"
                android:onClick="setNumberEvent"
                android:text="8"
                android:textColor="#FFF"
                android:textSize="14pt"
                android:layout_margin="1pt"
                android:layout_height="25pt"
                android:layout_width="25pt"
                android:layout_weight="1"
                android:background="@color/design_default_color_primary_dark">

            </Button>

            <Button
                android:id="@+id/btnNine"
                android:onClick="setNumberEvent"
                android:text="9"
                android:textColor="#FFF"
                android:textSize="14pt"
                android:layout_margin="1pt"
                android:layout_height="25pt"
                android:layout_width="25pt"
                android:layout_weight="1"
                android:background="@color/design_default_color_primary_dark">

            </Button>


            <Button
                android:id="@+id/btnPlus"
                android:text="+"
                android:onClick="setOperatorEvent"
                android:textColor="#FFF"
                android:textSize="14pt"
                android:layout_margin="1pt"
                android:layout_height="25pt"
                android:layout_width="25pt"
                android:layout_weight="1"
                android:background="#000">

            </Button>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnFour"
                android:onClick="setNumberEvent"
                android:text="4"
                android:textColor="#FFF"
                android:textSize="14pt"
                android:layout_margin="1pt"
                android:layout_height="25pt"
                android:layout_width="25pt"
                android:layout_weight="1"
                android:background="@color/design_default_color_primary_dark">

            </Button>

            <Button
                android:id="@+id/btnFive"
                android:onClick="setNumberEvent"
                android:text="5"
                android:textColor="#FFF"
                android:textSize="14pt"
                android:layout_margin="1pt"
                android:layout_height="25pt"
                android:layout_width="25pt"
                android:layout_weight="1"
                android:background="@color/design_default_color_primary_dark">

            </Button>

            <Button
                android:id="@+id/btnSix"
                android:onClick="setNumberEvent"
                android:text="6"
                android:textColor="#FFF"
                android:textSize="14pt"
                android:layout_margin="1pt"
                android:layout_height="25pt"
                android:layout_width="25pt"
                android:layout_weight="1"
                android:background="@color/design_default_color_primary_dark">

            </Button>


            <Button
                android:id="@+id/btnMinus"
                android:text="-"
                android:onClick="setOperatorEvent"
                android:textColor="#FFF"
                android:textSize="14pt"
                android:layout_margin="1pt"
                android:layout_height="25pt"
                android:layout_width="25pt"
                android:layout_weight="1"
                android:background="#000">

            </Button>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnOne"
                android:onClick="setNumberEvent"
                android:text="1"
                android:textColor="#FFF"
                android:textSize="14pt"
                android:layout_margin="1pt"
                android:layout_height="25pt"
                android:layout_width="25pt"
                android:layout_weight="1"
                android:background="@color/design_default_color_primary_dark">

            </Button>

            <Button
                android:id="@+id/btnTwo"
                android:onClick="setNumberEvent"
                android:text="2"
                android:textColor="#FFF"
                android:textSize="14pt"
                android:layout_margin="1pt"
                android:layout_height="25pt"
                android:layout_width="25pt"
                android:layout_weight="1"
                android:background="@color/design_default_color_primary_dark">

            </Button>

            <Button
                android:id="@+id/btnThree"
                android:onClick="setNumberEvent"
                android:text="3"
                android:textColor="#FFF"
                android:textSize="14pt"
                android:layout_margin="1pt"
                android:layout_height="25pt"
                android:layout_width="25pt"
                android:layout_weight="1"
                android:background="@color/design_default_color_primary_dark">

            </Button>


            <Button
                android:id="@+id/btnDivide"
                android:text="/"
                android:onClick="setOperatorEvent"
                android:textColor="#FFF"
                android:textSize="14pt"
                android:layout_margin="1pt"
                android:layout_height="25pt"
                android:layout_width="25pt"
                android:layout_weight="1"
                android:background="#000">

            </Button>
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnZero"
            android:text="0"
            android:onClick="setNumberEvent"
            android:textColor="#FFF"
            android:textSize="14pt"
            android:layout_margin="1pt"
            android:layout_height="25pt"
            android:layout_width="25.5pt"
            android:layout_weight="1"
            android:background="@color/design_default_color_primary_dark">

        </Button>

        <Button
            android:id="@+id/btnDot"
            android:text="."
            android:onClick="setNumberEvent"
            android:textColor="#FFF"
            android:textSize="14pt"
            android:layout_margin="1pt"
            android:layout_height="25pt"
            android:layout_width="25pt"
            android:layout_weight="1"
            android:background="@color/design_default_color_primary_dark">

        </Button>


        <Button
            android:id="@+id/btnEqual"
            android:text="="
            android:onClick="setResult"
            android:textColor="#FFF"
            android:textSize="14pt"
            android:layout_margin="1pt"
            android:layout_height="25pt"
            android:layout_width="25pt"
            android:layout_weight="1"
            android:background="#000">

        </Button>

    </LinearLayout>
</LinearLayout>

